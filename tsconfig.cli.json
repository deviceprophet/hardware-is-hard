{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ES2022"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "types": ["node"]
    },
    "include": ["src/cli.ts", "src/engine/**/*", "src/adapters/console/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
