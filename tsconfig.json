{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        /* Strictest additions beyond astro/strict */
        "noUncheckedIndexedAccess": true,
        "noFallthroughCasesInSwitch": true
    }
}
